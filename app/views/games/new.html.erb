<div class="flex-div"> <!-- je mets du style sur les lettres -->
  <ul style="list-style-type: none; display: flex;">
    <% @letters.each do |letter| %>
      <li>
        <div class="card">
          <p><%= letter %></p>
        </div>
      </li>
    <% end %>
  </ul>
</div>
<div>
<!-- j'affiche un formulaire de reponse -->
  <form action="score" method="post" data-turbo="false">
    <input type="text" name="word" id="word" placeholder="Votre mot" />
  <!-- j'ajout un champ caché pour envoyer letters dans les params-->
   <%= hidden_field_tag :letters, @letters.join %>
    <input type="submit" value="Submit" />
<!-- je mets un champ caché qui intégrera la clé d'authentification -->
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
